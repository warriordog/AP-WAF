{
  "verbose": true,
  "rules": {
    "loader": {
      "modulePrefix": "./rules/",
      "moduleExtensions": [
        ".js",
        ".mjs",
        ".cjs"
      ]
    },
    "registry": {
      "settings": {
        "StripSignatures": "on",
        "DomainDenyList": [
          "on",
          {
            "filterIncoming": true,
            "filterOutgoing": true,
            "domains": [
              "poa.st.example.com",
              "shitposter.club.example.com"
            ]
          }
        ],
        "DomainAllowList": "off",
        "RejectAll": "off"
      }
    }
  }
}
